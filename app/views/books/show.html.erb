<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td id="favorite_btn<%= @book.id %>">
  		      <%= render partial: 'favorites/favorite-btn', locals: {book: @book} %>
  		    </td>
          <td class="comment-count"><%= render 'book_comments/comment_count', book: @book %></td>
          <td id="star-rate<%= @book.id%>"></td>
            <script>
              $('#star-rate<%= @book.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= @book.rate %>,
              });
            </script>
          <td>閲覧数：<%= @book.view_counts.count %></td>
          <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      </table>
      <div>TagList</div>
      <div class="d-flex">
        <div>
          <% @book.tag_list.each do |tag| %>
            <%= link_to tag, search_path(range: "TagList", word: tag) %>
          <% end %>
        </div>
        <div>
          <%= form_with model: @book do |f| %>
            <%= f.text_field :new_tag %>
            <%= f.submit 'Add a tag' %>
          <% end %>
        </div>
      </div>
      <table class='table comment-table'>
  		  <%= render 'book_comments/comment', comments: @comments %>
      </table>
      <div>
        <%= render 'book_comments/comment_form', book: @book, comment: @comment %>
      </div>
    </div>
  </div>
</div>