    </tr>
  </thead>
  <tbody>
    <% messages.each do |message| %>
      <% if message.user_id == user.id %>
      <tr>
        <td>
          <%= image_tag message.user.get_profile_image, size: '50x50' %><br>
          <%= message.user.name %>
        </td>
        <td><%= message.created_at.strftime('%Y.%m.%d.%H:%M') %></td>
        <td><%= message.body %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% else %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><%= message.body %></td>
          <td><%= message.created_at.strftime('%Y.%m.%d.%H:%M') %></td>
          <td>
            <%= image_tag message.user.get_profile_image,size: '50x50' %><br>
            <%= message.user.name %>
          </td>


        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>