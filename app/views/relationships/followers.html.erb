<h1>Follower Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.followers.each do |follower| %>
      <tr>
        <td>
          <%= link_to user_path(follower.id) do %>
            <%= image_tag follower.get_profile_image, size: '40x40' %>
          <% end %>
        </td>
        <td><%= follower.name %></td>
        <td>フォロー数：<%= follower.followings.count %></td>
        <td>フォロワー数：<%= follower.followers.count %></td>
        <td><%= link_to 'Show', user_path(follower.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

