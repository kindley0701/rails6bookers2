<h1>Following Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.followings.each do |following| %>
      <tr>
        <td>
          <%= link_to user_path(following.id) do %>
            <%= image_tag following.get_profile_image, size: '40x40' %>
          <% end %>
        </td>
        <td><%= following.name %></td>
        <td>フォロー数：<%= following.followings.count %></td>
        <td>フォロワー数：<%= following.followers.count %></td>
        <td><%= link_to 'Show', user_path(following.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>