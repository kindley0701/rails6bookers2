<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %><!--検索フォーム-->
      <%= f.select :range, options_for_select([['User'], ['Book']]) %><!--検索モデル範囲-->
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %><!--検索方法選択-->
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %><!--検索フォーム-->
      <%= f.hidden_field :range, :value => 'Tag' %><!--検索モデル範囲-->
      <%= f.submit "タグ検索", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="search_form">
    <%= search_form_for search, url: search_path do |f| %>
      <div>
        <%= f.label :title_cont, class: 'col-2' %>
        <%= f.search_field :title_cont %><!--検索フォーム-->
      </div>
      <div>
        <%= f.label :body_cont, class: 'col-2' %>
        <%= f.search_field :body_cont %><!--検索フォーム-->
      </div>
      <div>
        <%= f.label :tag_cont, class: 'col-2' %>
        <%= f.search_field :tag_cont %><!--検索フォーム-->
      </div>
      <div>
        <%= f.submit "詳細検索", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
<% end %>